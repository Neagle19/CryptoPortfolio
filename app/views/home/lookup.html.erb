<h3>Search for a Cryptocurrency</h3>
<br>

<%= form_tag home_lookup_path, :method => 'POST' do %>
  <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol', size: 50 %>
  <%= submit_tag 'Search', class: "btn btn-primary"%>
<% end %>
<br>

<% @symbol = params[:sym] %>
<% if @symbol %>
  <% @symbol = @symbol.upcase %>
  <% if @symbol == "AMB" %>
    <%= "I suggest you revise your investment strategy" %>
  <% elsif (@symbol == "") || (@all_symbols.exclude? @symbol) %>
    <%= "Error: Please enter a valid cryptocurrency symbol such as 'BTC', 'ETH' etc." %>
  <% end %>
  <% for coin in @coins %>
    <% if @symbol == "#{coin['symbol']}" %>
      <table class="table table-striped table-bordered table-responsive table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>CoinMarketCap Ranking</th>
            <th>Current Price</th>
            <th>7 Day Change</th>
            <th>24Hr Trading Volume</th>
            <th>Market Cap</th>
            <th>Add to my Portfolio</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= coin["name"] %></td>
              <td><%= coin["symbol"] %></td>
              <td><%= coin["rank"] %></td>
              <td><%= number_to_currency(coin["price_usd"]) %></td>
              <td><%= coin["percent_change_7d"] %>%</td>
              <td><%= number_to_currency(coin["24h_volume_usd"]) %></td>
              <td><%= number_to_currency(coin["market_cap_usd"]) %></td>
              <td><%= link_to "Add", new_crypto_path, symbol: coin["symbol"] %></td>
            </tr>
        </tbody>
      </table>
    <% end %>
  <% end %>
<% end %>

